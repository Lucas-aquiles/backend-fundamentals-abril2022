<h2>Food</h2>
<section>
    <% food.forEach(dish => { %>
        <article>
            <h3><%= dish.name %> </h3>
            <div>
                <% if (dish.categories.length===0) { %>
                    <p>No categories</p>
                <% } else { %>
                    <ul>
                        <% dish.categories.forEach(({category}) => { %>
                            <li><%= category.name %> </li>
                        <% }) %>
                    </ul>
                <% } %>

            </div>
            <p><%= dish.price %> </p>
            <p><%= dish.description %> </p>
            <img src="<%= dish.image %>" alt="">
            <% if (locals.user && locals.user.loggedIn && user.role==="ADMIN") { %>
                <a href="/food/edit/<%= dish.id %> ">Editar</a>
                <a href="/food/delete/<%= dish.id %> ">Eliminar</a>
            <% } %>
            <% if (locals.user && locals.user.loggedIn && user.role==="NORMAL") { %>
                <a href="/orders/add/<%= dish.id %> ">Agregar a la orden</a>
            <% } %>
        </article>
    <% }) %>
</section>